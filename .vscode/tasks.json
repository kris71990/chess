{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run build",
      "type": "shell",
      "command": "cmake --build .",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "label": "Open Terminal",
      "type": "shell",
      "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
      "problemMatcher": []
    },
  ]
}